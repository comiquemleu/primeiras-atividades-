Var
base , altura , area: real

Inicio
escreva("Digite um numero ")
leia ( base )

escreva ("Digite o numero ")
leia( altura )

limpatela

area <- ( base*altura )/2

escreval("")

escreval ("valor da base: " , base)
escreval ("valor da altura = " , altura )
escreval (" resultado da area = " , area  )



